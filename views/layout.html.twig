<div class="container">

    {% block content %}
    {% endblock %}

    <script>

        $(document).ready(function() {

            $('.fornicator').click(function(evt) {

                evt.preventDefault();

                $.post(this.href).then(function(data) {

                    var msg = data.success ? 'Fornicated successfully. ' : 'Fornication failed. ';
                    msg = msg + 'Must... reload... now!';
                    alert(msg);
                    document.location.reload();
                });

            });

        });

    </script>

